{% extends "layout.html.twig" %}
{% block title %}
    {{ name }}
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <h2>
                <span style="color: red">
                {% if session.get('user_id') %}
                    Dear {{ session.get('username') }}!
                {% else %}
                    Anonymous!
                {% endif %}
                </span>
                Welcome to my test to novo!
                {% if not session.get('user_id') %}
                    <a href="/login"> Login </a>
                {% endif %}
            </h2>
        </div>
    </div>
{% endblock body %}